{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "ChronoSnap",
  "version": "0.1.0",
  "identifier": "com.chronosnap.app",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "BUILD_TARGET=tauri npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "ChronoSnap",
        "width": 1280,
        "height": 720,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "minWidth": 960,
        "minHeight": 540
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https://*.supabase.co blob:; connect-src 'self' https://*.supabase.co https://api.xendit.co wss://*.supabase.co; media-src 'self' blob:;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "entitlements": "Entitlements.plist"
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}